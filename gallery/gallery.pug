doctype html
html
  head
    title Matrix
    style.
      let n = 14;
      let p = n * n;
      let img1 = "https://picsum.photos/id/152/1200/1200";
      let img2 = "https://picsum.photos/id/360/1200/1200";

      .grid {
        display: grid;
        grid-template-columns: repeat(n, 1fr);
        grid-template-rows: repeat(n, 1fr);
        --img1: url(${img1});
        --img2: url(${img2});
      }

      .cell {
        grid-column: var(--i);
        grid-row: var(--j);
      }

      .grid:has(.cell[style*="--i: #{x}"]:hover) {
        --ki: #{x};
      }

      .grid:has(.cell[style*="--j: #{x}"]:hover) {
        --kj: #{x};
      }

  body
    input(type="checkbox", id="image")
    label.grid(for="image")
      - for (let j = 0; j < n; j++)
        - for (let i = 0; i < n; i++)
          .cell(style=`--i: ${i}; --j: ${j};`)
